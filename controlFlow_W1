// Loopy -Solution
var arr = [0,1,2,3,4,5];
var counter = 0;
var print = arr.length-1;
while(counter < print){
  counter++;
  counsole.log(arr[counter]);
}

var arr = [0,1,2,3,4,5];
var counter = 0;
var print = arr.length-1;
while(counter < print){
  print--;
  counsole.log(arr[print]);
}
