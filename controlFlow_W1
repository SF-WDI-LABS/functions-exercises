// make it a SloppyBurger - solution
var input = prompt('What would you like');
if(input == 'DoubleBurger'){
  alert('One SloppyDoubleBurger')
};
if(input == 'Fries'){
  alert('One SloppyFries');
}
if(input == 'SloppyJoe'){
  alert('One SloppySloppyJoe');
}else{
  alert('One SloppyBurger');
}

// For Here - solution
var items = prompt("How many items"), tax = 0.775;scanned = 0, total = 0,itemcost;

while(items > scanned){
  if(forHere){
    scanned++;
    cost += (itemcost*tax);
  }
  else if(isHotBeverage || isHotBakedGood || isColdPrepared){
    scanned++;
    total += itemcost;
  }
}

